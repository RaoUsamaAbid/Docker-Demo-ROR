<div class="container mt-4">
  <h1><%= @todo.title %></h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text"><strong>Description:</strong></p>
      <p class="card-text"><%= simple_format(@todo.description) %></p>
      <p class="card-text"><strong>Created at:</strong> <%= @todo.created_at %></p>
      <p class="card-text"><strong>Updated at:</strong> <%= @todo.updated_at %></p>

      <!-- Edit button -->
      <%= link_to 'Edit', edit_todo_path(@todo), class: 'btn btn-warning mt-3' %>
    </div>
  </div>

  <%= link_to 'Back', todos_path, class: 'btn btn-secondary mt-3' %>
</div>
